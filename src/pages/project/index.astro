---
import { getCollection } from "astro:content";
import Layout from "@layouts/Default.astro";
import ProjectList from "@components/project/ProjectList.astro";

const projects = await getCollection("project").then((collection) =>
	collection.reverse()
);
---

<Layout
	title="Projects"
	description="Project | On this page you can find a collection of projects"
	pageTitle="Project">
	<main class="bg-lime-400 p-6">
		<div class="flex column justify-between items-start">
			<h2 class="text-2xl md:text-4xl lg:text-6xl mb-8 poppins font-bold">
				Recent Projects
			</h2>
		</div>
		<ProjectList projects={projects} />
	</main>
</Layout>
