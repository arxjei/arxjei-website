---
import { type CollectionEntry, render, getCollection } from "astro:content";
import Layout from "@components/layouts/ProjectPost.astro";

export async function getStaticPaths() {
	const projects = await getCollection("projects");
	return projects.map((project) => ({
		params: { slug: project.id },
		props: { project },
	}));
}

interface Props {
	project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<Layout
	title={project.data.title}
	headings={project.rendered?.metadata?.headings}
	description={project.data.description}
	pubDate={project.data.pubDate}
	author={project.data.author}
	viewLiveDemoLink={project.data.viewLiveDemoLink}>
	<Content />
</Layout>
