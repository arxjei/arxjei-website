---
import type { GitHubUser } from "@lib/github";
import BaseNavigation from "@components/layouts/includes/BaseNavigation.astro";
import BaseFooter from "@components/layouts/includes/BaseFooter.astro";
import BaseHead from "@components/layouts/includes/BaseHead.astro";
import "@styles/global.css";

interface Props {
	title: string;
	description: string;
	classList?: string;
	pageTitle?: string;
	ogImage?: URL;
	userData: GitHubUser;
}

const { title, description, classList, pageTitle, ogImage, userData } =
	Astro.props;
---

<html
	lang="en"
	class="h-full">
	<BaseHead
		ogImage={ogImage}
		title={title}
		description={description}
	/>

	<body class:list={[classList]}>
		<div
			class="max-w-[100rem] mx-auto lg:border-black lg:border-r-2 lg:border-l-2">
			<BaseNavigation
				userData={userData}
				pageTitle={pageTitle}
			/>
			<slot />
			<BaseFooter userData={userData} />
		</div>
	</body>
</html>
