---
import type { GitHubUser } from "@lib/github";
import BaseNavigation from "@components/layouts/includes/BaseNavigation.astro";
import BaseFooter from "@components/layouts/includes/BaseFooter.astro";
import BaseHead from "@components/layouts/includes/BaseHead.astro";
import "@styles/global.css";

interface Props {
	title: string;
	description: string;
	classList?: string;
	pageTitle?: string;
	ogImage?: URL;
	userData: GitHubUser;
}

const { title, description, classList, pageTitle, ogImage, userData } =
	Astro.props;
---

<style>
	body {
		background-image:
			linear-gradient(to right, #000 1px, transparent 1px),
			linear-gradient(to bottom, #000 1px, transparent 1px);
		background-size: 24px 24px;
		background-attachment: fixed;
	}
</style>

<html
	lang="en"
	class="h-full">
	<BaseHead
		ogImage={ogImage}
		title={title}
		description={description}
	/>

	<body class:list={classList}>
		<div
			class="max-w-[100rem] mx-auto [@media(min-width:100rem)]:border-l-2 [@media(min-width:100rem)]:border-r-2 [@media(min-width:100rem)]:border-black">
			<BaseNavigation
				userData={userData}
				pageTitle={pageTitle}
			/>
			<slot />
			<BaseFooter userData={userData} />
		</div>
	</body>
</html>
