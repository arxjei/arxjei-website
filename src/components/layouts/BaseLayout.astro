---
import BaseNavigation from "@components/layouts/includes/BaseNavigation.astro";
import BaseFooter from "@components/layouts/includes/BaseFooter.astro";
import BaseHead from "@components/layouts/includes/BaseHead.astro";
import "@styles/global.css";

interface Props {
	title: string;
	description: string;
	classList?: string;
	pageTitle?: string;
	ogImage?: URL;
}

const { title, description, classList, pageTitle, ogImage } = Astro.props;
---

<html
	lang="en"
	class="h-full">
	<BaseHead
		ogImage={ogImage}
		title={title}
		description={description}
	/>

	<body class:list={[classList]}>
		<BaseNavigation {pageTitle} />
		<slot />
		<BaseFooter />
	</body>
</html>
