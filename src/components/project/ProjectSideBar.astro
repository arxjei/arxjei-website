---
interface Props {
	headings: Array<Object>;
}

const { headings } = Astro.props;
---

<aside>
	<nav class="hidden lg:block sticky top-6">
		<p class="text-xs font-semibold uppercase tracking-wide text-white mb-3">
			Contents
		</p>
		<ul>
			{
				headings.map((heading: any) => (
					<li class="py-1">
						{[...Array(heading.depth - 1)].map((_, _i) => (
							<span class="inline-block w-4" />
						))}
						<a
							class="hover:text-stone border-l-2 border-transparent hover:border-black pl-3 py-1 transition-all duration-150 ease-in-out poppins"
							href={`#${heading.slug}`}>
							{heading.text}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</aside>
