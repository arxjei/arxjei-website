---
import CustomBrutalButton from "@components/CustomBrutalButton.astro";
---

<section class="flex flex-col justify-center items-center p-6">
	<div class="flex flex-col gap-4">
		<h1 class="text-4xl md:text-4xl lg:text-6xl poppins font-bold">
			Page Not Found
		</h1>
		<p class="text-lg md:text-xl">
			The page you are looking for does not exist.
		</p>
	</div>
	<CustomBrutalButton
		href="/"
		class="mt-8">
		Go Home
	</CustomBrutalButton>
</section>
